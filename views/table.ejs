<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All_books</title>
    <style>
        	
		table,tr,th,td{
			padding: 10px;
			margin: 15px;
			border: 1px solid black;
            margin-top: 50px;
            border-collapse: collapse;
            width: 65%;
			
		}
        h4{
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <center>
        <h4><a href="/">Add Book</a> </h4>
        <table>
            <tr>
                <th colspan="5">ALL BOOKS IN THE STORE | Address</th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th colspan="3">Action</th>
            </tr>
             <% books.forEach((book)=>{ %>
                <tr>
                    <td><%=book.name %></td>
                    <td><%=book.address %></td>
                    <td><a href="/view?id=<%=book.id %>">View</a></td>
                    <td><a href="/change?id=<%=book.id %>">update</a></td>
                    <td><a href="/del?id=<%=book.id %>">delete</a></td>
                </tr>
           <%  }) %>
        </table>
    </center>
</body>
</html>